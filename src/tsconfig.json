{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es2018",
        "lib": ["es2018", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "pretty": true,
        "alwaysStrict": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js"]
}
