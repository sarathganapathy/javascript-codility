{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "pretty": true,
        "alwaysStrict": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react",
        "typeRoots": ["./custom-types", "./node_modules/@types"]
    },
    "include": ["servers/server/**/*", "servers/js-compiler-server/**/*"],
    "exclude": ["src/**/*", "node_modules"]
}
